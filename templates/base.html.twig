		<!-- Contact Section -->
		<div id="contact" class="text-center">
		  <div class="container">
		    <div class="section-title center">
		      <h2>Contact</h2>
		      
		    </div>
		     <div class="clearfix"></div>
		    <div class="col-md-8 col-md-offset-2">
		      {{ form_start(form) }}
		      <form name="sentMessage" id="contactForm" novalidate>
		        <div class="row">
		          <div class="col-md-6">
		            <div class="form-group">
		            	{{ form_widget(form.name, { 'attr': { 'class': 'form-control', 'id': 'form_name', 'name': 'form[name]', 'placeholder': 'Nom' } }) }}
		              
		              <p class="help-block text-danger"></p>
		            </div>
		          </div>
		          <div class="col-md-6">
		            <div class="form-group">
		              {{ form_widget(form.email, { 'attr': { 'class': 'form-control', 'id': 'form_email', 'name': 'form[email]', 'placeholder': 'E-Mail' } }) }}
		              <p class="help-block text-danger"></p>
		            </div>
		          </div>
		        </div>
		        <div class="form-group">
		          {{ form_widget(form.message, { 'attr': { 'class': 'form-control text-area-size', 'id': 'form_message', 'name': 'form[message]', 'placeholder': 'Message' } }) }}
		          <p class="help-block text-danger"></p>
		        </div>
		        <div id="success"></div>
		        <button type="submit" class="btn btn-default">Envoyer</button>
		        {{ form_rest(form) }}
